{
  "manifest_version": 3,
  "name": "Roblox VC Ban Timer",
  "version": "1.0",
  "description": "Shows how long you are banned from Roblox Voice Chat.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://voice.roblox.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
